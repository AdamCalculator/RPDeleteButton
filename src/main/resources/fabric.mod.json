{
  "schemaVersion": 1,
  "id": "respackdeletebutton",
  "version": "${version}",

  "name": "ResPackDeleteButton",
  "description": "Add delete button in resource packs (hold Shift to see)",
  "authors": [
    "AdamCalculator"
  ],
  "contact": {
    "homepage": "https://github.com/AdamCalculator/RPDeleteButton",
    "sources": "https://github.com/AdamCalculator/RPDeleteButton",
    "issues": "https://github.com/AdamCalculator/RPDeleteButton"
  },

  "license": "MIT",
  "icon": "assets/respackdeletebutton/icon.png",

  "environment": "client",
  "entrypoints": {
    "libjf:resource_pack_entry_widget": ["com.adamcalculator.rpdeletebutton.DeleteButtonWidget"],
    "modmenu": ["com.adamcalculator.rpdeletebutton.ModMenuIntegration"]
  },

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": "*",
    "minecraft": "~${minecraft_version}",
    "java": ">=21",
    "fabric-language-kotlin": ">=${fabric_kotlin_version}"
  },
  "recommends": {
    "cloth-config": "*"
  }
}
